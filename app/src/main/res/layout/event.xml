<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Title"
        android:textSize="20sp" />

        <EditText
            android:id="@+id/event_name"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginRight="@+id/title"
            android:inputType="text"
            android:textColor="#5ABC4F"
            android:textSize="20sp" />
    </TableRow>
    <TableRow>

        <TextView
        android:id="@+id/start"
        android:text="Strat time"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:layout_below="@+id/event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/event_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_name"
            android:layout_margin="10dp"
            android:layout_marginRight="@+id/start"
            android:inputType="datetime"
            android:textColor="#5ABC4F"
            android:textSize="20sp" />

    </TableRow>
    <TableRow>
    <TextView
        android:id="@+id/end"
        android:text="End time"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:layout_below="@+id/event_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/event_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_start"
            android:layout_margin="10dp"
            android:layout_marginRight="@+id/end"
            android:inputType="datetime"
            android:textColor="#5ABC4F"
            android:textSize="20sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Location"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/event_location"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginRight="@+id/title"
            android:inputType="text"
            android:textColor="#5ABC4F"
            android:textSize="20sp" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/transport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Transport"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/event_transport"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:spinnerMode="dropdown"
            android:entries="@array/transport"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/remindtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Remindtime"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/event_remindtime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:spinnerMode="dropdown"
            android:entries="@array/remindtime"/>
    </TableRow>

    <Button
        android:id="@+id/btn_change"
        android:layout_below="@+id/event_end"
        android:text="Edit"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="#5ABC4F"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
    <Button
        android:id="@+id/btn_add_event"
        android:layout_below="@+id/event_end"
        android:text="Add"
        android:visibility="gone"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="#5ABC4F"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

</TableLayout>
